<% include head %>
<div class="container" style="margin-top: 60px;">
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                Login
            </div>
            <div class="panel-body">
                <form class="form-horizontal" id="vue-body">
                    <div class="form-group">
                        <label class="col-sm-1 control-label">
                            <span class="glyphicon glyphicon-envelope"></span>
                        </label>

                        <div class="col-sm-4">
                            <input type="text" class="form-control" v-model="rawEmail">
                        </div>

                        <label class="col-sm-1 control-label">name:</label>

                        <div class="col-sm-2">
                            <input type="text" class="form-control" v-model="name">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-2" v-if="captchaUrl">
                            <img :src="captchaUrl">
                            <span class="glyphicon glyphicon-refresh" aria-hidden="true" style="cursor: pointer;"
                                @click="refreshCaptcha();">
                            </span>
                        </div>
                        <div class="col-sm-2">
                            <input type="text" class="form-control" v-model="code">
                        </div>
                        <div class="col-sm-4">
                            <button type="button" class="btn btn-primary" style="display: none"
                                v-show="canLogin"
                                @click="login()">
                                Login
                            </button>
                            <button type="button" class="btn btn-primary" disabled style="display: none"
                                v-else>Please input email and code
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<% include scripts %>
<script type="text/javascript" src="./scripts/login<%- dotMin %>.js"></script>
<% include foot %>
