<% include head %>
<div class="container" style="margin-top: 60px;">
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                Invite
            </div>
            <div class="panel-body">
                <form class="form-horizontal" id="vue-body">
				    <div class="form-group">
                        <div class="col-sm-12">
                            <label class="the-label {{$root.currentOrganizationId === organization.id ? 'label-active':''}}"
                            v-for="organization in organizationsCurrentUserCreated"
                            @click="clickOrganization(organization)">{{organization.name}}</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">
                            <span class="glyphicon glyphicon-envelope"></span>
                        </label>

                        <div class="col-sm-4">
                            <input type="text" class="form-control" v-model="email">
                        </div>

                        <div class="col-sm-2">
                            <button type="button" class="btn btn-primary"
                                v-show="canInvite"
                                @click="invite()">
                                Invite
                            </button>
                            <button type="button" class="btn btn-primary" disabled
                                v-else>Please input invitee's email
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<% include scripts %>
<script type="text/javascript" src="./scripts/invite<%- dotMin %>.js"></script>
<% include foot %>
