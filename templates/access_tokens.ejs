<% include head %>
<div class="container" style="margin-top: 60px;">
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                Access tokens
            </div>
            <div class="panel-body" id="vue-body">
                <form class="form">
                    <div class="form-group">
                        <div class="col-sm-12">
                            <table class="table">
                                <tbody>
                                    <tr v-for="accessToken in accessTokens">
                                        <td>
                                            <a href="javascript:void(0)"
                                                @click="edit(accessToken)">
                                                {{accessToken.description}}
                                            </a>
                                            <p>
                                                <span class="label label-success"
                                                    style="margin:0 5px"
                                                    v-for="scope in accessToken.scopes">
                                                    {{scope.name}}
                                                </span>
                                            </p>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </form>
                <form class="form">
                    <button type="button" class="btn btn-default"
                        v-show="idInEditing"
                        @click="new()">New</button>
                    <button type="button" class="btn btn-danger"
                        v-show="idInEditing"
                        @click="regenerate()">Regenerate access token</button>
                    <div class="form-group" v-show="newAccessToken">
                        <label>new access token</label>
                        <input type="text" class="form-control"" v-model="newAccessToken" readonly>
                    </div>
                    <div class="form-group">
                        <label for="description">description</label>
                        <input type="text" class="form-control" id="description" v-model="descriptionInEditing">
                    </div>
                    <div class="checkbox">
                        <label class="checkbox" v-for="scope in scopes">
                            <input type="checkbox" v-model="scopesInEditing" value="{{scope.name}}">
                            {{scope.name}} : {{scope.description}}
                        </label>
                    </div>
                    <button type="button" class="btn btn-primary"
                        @click="save()">{{idInEditing ? "Update" : "Create"}}</button>
                    <button type="button" class="btn btn-danger"
                        v-show="idInEditing"
                        @click="remove()">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
<% include scripts %>
<script type="text/javascript" src="./scripts/access_tokens<%- dotMin %>.js"></script>
<% include foot %>
