<% include head %>
<div class="container" style="margin-top: 60px;">
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                New Organization
            </div>
            <div class="panel-body">
                <form class="form-horizontal" id="vue-body">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">organization name:</label>

                        <div class="col-sm-4">
                            <input type="text" class="form-control" v-model="organizationName">
                        </div>

                        <div class="col-sm-2">
                            <button type="button" class="btn btn-primary"
                                v-show="canAdd"
                                @click="add()">
                                Add
                            </button>
                            <button type="button" class="btn btn-primary" disabled
                                v-else>Please input organization name
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<% include scripts %>
<script type="text/javascript" src="./scripts/new_organization<%- dotMin %>.js"></script>
<% include foot %>
