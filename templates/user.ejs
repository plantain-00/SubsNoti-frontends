<% include head %>
<div class="container" style="margin-top: 60px;">
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                User Information
            </div>
            <div class="panel-body">
                <form class="form-horizontal" id="vue-body">
                    <div class="form-group">
                        <label class="col-sm-1 control-label">name:</label>

                        <div class="col-sm-2">
                            <input type="text" class="form-control" v-model="name">
                        </div>
                        <label class="col-sm-1 control-label">avatar:</label>
                        <div class="col-sm-2">
                            <input type="file" name="avatar">
                        </div>
                        <div class="col-sm-4">
                            <button type="button" class="btn btn-primary" style="display: none"
                                v-show="canSave"
                                @click="save()">
                                Save
                            </button>
                            <button type="button" class="btn btn-primary" disabled style="display: none"
                                v-else>name can not be empty
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<% include scripts %>
<script type="text/javascript" src="./scripts/user<%- dotMin %>.js"></script>
<% include foot %>
