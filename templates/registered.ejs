<% include head %>
<div class="container" style="margin-top: 60px;">
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                Registered applications
            </div>
            <div class="panel-body" id="vue-body">
                <form class="form">
                    <div class="form-group">
                        <div class="col-sm-12">
                            <table class="table">
                                <tbody>
                                    <tr v-for="application in applications">
                                        <td>
                                            <a href="javascript:void(0)"
                                                @click="edit(application)">
                                                {{application.name}}
                                            </a>
                                            <p>
                                                client id: {{application.clientId}}
                                            </p>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </form>
                <form class="form">
                    <button type="button" class="btn btn-default"
                        v-show="idInEditing"
                        @click="new()">New</button>
                    <div class="form-group" v-show="idInEditing">
                        <label>client secret</label>
                        <input type="text" class="form-control" readonly v-model="clientSecretInEditing">
                    </div>
                    <button type="button" class="btn btn-danger"
                        v-show="idInEditing"
                        @click="resetClientSecret()">Reset client secret</button>
                    <div class="form-group">
                        <label for="name">name</label>
                        <input type="text" class="form-control" id="name" placeholder="name" v-model="nameInEditing">
                    </div>
                    <div class="form-group">
                        <label for="home-url">home url</label>
                        <input type="text" class="form-control" id="home-url" placeholder="https://" v-model="homeUrlInEditing">
                    </div>
                    <div class="form-group">
                        <label for="description">description</label>
                        <input type="text" class="form-control" id="description" placeholder="optional" v-model="descriptionInEditing">
                    </div>
                    <div class="form-group">
                        <label for="authorizationCallbackUrl">authorization callback url</label>
                        <input type="text" class="form-control" id="authorizationCallbackUrl" placeholder="https://" v-model="authorizationCallbackUrlInEditing">
                    </div>
                    <button type="button" class="btn btn-primary"
                        @click="save()">{{idInEditing ? "Update" : "Register"}}</button>
                    <button type="button" class="btn btn-danger"
                        v-show="idInEditing"
                        @click="remove()">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
<% include scripts %>
<script type="text/javascript" src="./scripts/registered<%- dotMin %>.js"></script>
<% include foot %>
